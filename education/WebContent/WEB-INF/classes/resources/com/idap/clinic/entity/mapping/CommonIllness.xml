<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.idap.clinic.entity.CommonIllness" >
    <resultMap id="CommonIllness" type="com.idap.clinic.entity.CommonIllness">
    	    <result property="illnessId" column="ILLNESS_ID" jdbcType="VARCHAR" />
    	    <result property="illnessName" column="ILLNESS_NAME" jdbcType="VARCHAR" />
    	    <result property="illnessDesc" column="ILLNESS_DESC" jdbcType="VARCHAR" />
    	    <result property="illnessTypeId" column="ILLNESS_TYPE_ID" jdbcType="VARCHAR" />
	</resultMap>
	 
 
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			ILLNESS t
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			ILLNESS t
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	
	   <sql id="allColumn">
	           t.ILLNESS_ID,
	           t.ILLNESS_NAME,
	           t.ILLNESS_DESC,
	           t.ILLNESS_TYPE_ID 
	</sql>
 
	
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="CommonIllness">
		<include refid="queryBody" />
	</select>
	
	<select id="commonIllnessquery" parameterType="java.util.Map" resultMap="CommonIllness">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="CommonIllness">
		<include refid="queryBody" />
	</select>
	
		<!-- 3.1.根据对像条件查询记录数 MAP参数 -->
	<select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		ILLNESS
		<include refid="dynamicWhere" />
		    
	</select>
	 	          
	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="querykeyword!=null">
					AND (ILLNESS_NAME like concat('%',#{querykeyword},'%') 
					OR ILLNESS_DESC like concat('%',#{querykeyword},'%')  )
				</if>
				 
			</trim>
	</sql>
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.idap.clinic.entity.CommonIllness" >
	    INSERT INTO 
	    ILLNESS(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
	            ILLNESS_ID,
	            ILLNESS_NAME,
	            ILLNESS_DESC,
	            ILLNESS_TYPE_ID 
 

	</sql>
	
	<sql id="allapplColumnVar">
		values(
				#{illnessId,jdbcType=VARCHAR},
				#{illnessName,jdbcType=VARCHAR},
				#{illnessDesc,jdbcType=VARCHAR},
				#{illnessTypeId,jdbcType=VARCHAR} 
		     )
	</sql>
	
	<update id="update" parameterType="com.idap.clinic.entity.CommonIllness">
			update ILLNESS
			<trim prefix=" SET " prefixOverrides=",">
				<if test="illnessName!=null">
					  ,ILLNESS_NAME=#{illnessName,jdbcType=VARCHAR}
				</if>
				<if test="illnessDesc!=null">
					  ,ILLNESS_DESC=#{illnessDesc,jdbcType=VARCHAR}
				</if>
				<if test="illnessTypeId!=null">
					  ,ILLNESS_TYPE_ID=#{illnessTypeId,jdbcType=VARCHAR}
				</if>
				 
			</trim>
			WHERE 
			 
				ILLNESS_ID=#{illnessId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM ILLNESS 
		where ILLNESS_ID =#{illnessId}
	</delete>	


</mapper>




