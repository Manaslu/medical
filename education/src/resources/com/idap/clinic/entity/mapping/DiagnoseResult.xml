	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			SEE_DOCTOR_RESULT  t left join Clinic c on t.clinic_id=c.clinic_id left join doctor d on d.doctor_id=t.doctor_id
