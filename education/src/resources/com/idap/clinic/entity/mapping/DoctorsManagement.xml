<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.idap.clinic.entity.DoctorsManagement" >
    <resultMap id="DoctorsManagement" type="com.idap.clinic.entity.DoctorsManagement">
    	    <result property="eatId" column="EAT_ID" jdbcType="VARCHAR" />
    	    <result property="eatTitle" column="EAT_TITLE" jdbcType="VARCHAR" />
    	    <result property="eatContent" column="EAT_CONTENT" jdbcType="VARCHAR" />
    	    <result property="eatPic" column="EAT_PIC" jdbcType="VARCHAR" />
    	    <result property="eatDate" column="EAT_DATE" jdbcType="DATE" />	    	    	    
    	    <result property="clinicId" column="CLINIC_ID" jdbcType="VARCHAR" />
	</resultMap>
	 
 
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			EAT t
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			EAT t
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	
	   <sql id="allColumn">
	           t.EAT_ID,
	           t.EAT_TITLE,
	           t.EAT_CONTENT,
	           t.EAT_PIC,
	           t.EAT_DATE,
	           t.CLINIC_ID
	</sql>
 
	
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="DoctorsManagement">
		<include refid="queryBody" />
	</select>
	
	<select id="doctorsManagementquery" parameterType="java.util.Map" resultMap="DoctorsManagement">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="DoctorsManagement">
		<include refid="queryBody" />
	</select>
	
		<!-- 3.1.根据对像条件查询记录数 MAP参数 -->
	<select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		EAT
		<include refid="dynamicWhere" />
		    
	</select>
	 
	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="querykeyword!=null">
					AND (EAT_TITLE like concat('%',#{querykeyword},'%') 
					OR EAT_CONTENT like concat('%',#{querykeyword},'%')  )
				</if>
				<if test="clinicId!=null">
					AND CLINIC_ID = #{clinicId}
				</if>
			</trim>
	</sql>
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.idap.clinic.entity.DoctorsManagement" >
	    INSERT INTO 
	    EAT(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
				EAT_ID,
				EAT_TITLE,
				EAT_CONTENT,
				EAT_PIC,
				EAT_DATE,
				CLINIC_ID 

	</sql>
	
	<sql id="allapplColumnVar">
		values(
				#{eatId,jdbcType=VARCHAR},
				#{eatTitle,jdbcType=VARCHAR},
				#{eatContent,jdbcType=DATE},
				#{eatPic,jdbcType=DATE},
				#{eatDate,jdbcType=DATE},
				#{clinicId,jdbcType=VARCHAR}
		     )
	</sql>
	
	<update id="update" parameterType="com.idap.clinic.entity.DoctorsManagement">
			update EAT
			<trim prefix=" SET " prefixOverrides=",">
				<if test="eatTitle!=null">
					  ,EAT_TITLE=#{eatTitle,jdbcType=DATE}
				</if>
				<if test="eatContent!=null">
					  ,EAT_CONTENT=#{eatContent,jdbcType=VARCHAR}
				</if>
				<if test="eatPic!=null">
					  ,EAT_PIC=#{eatPic,jdbcType=VARCHAR}
				</if>
				<if test="eatDate!=null">   
				      , EAT_DATE=#{eatDate,jdbcType=DATE}  
				</if>
			</trim>
			WHERE 
			 
				EAT_ID=#{eatId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM EAT 
		where EAT_ID =#{eatId}
	</delete>	


</mapper>




